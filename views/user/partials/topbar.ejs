<script>
    const getBaseUrl = "<%= JSON.stringify(baseUrl) %>";
    const baseUrl = getBaseUrl.replace(/&#34;/g, '');
    const getIdPegawai = "<%= JSON.stringify(req.session.idPegawai) %>";
    const idPegawai = getIdPegawai.replace(/&#34;/g, '');
    fetch(`${baseUrl}/user/pegawai/id/${idPegawai}`)
        .then((response) => response.json())
        .then((data) => {
            $('#nama-profil').html(data.data.nama);
            $('#foto-profil').attr("src", data.data.foto);
        });
</script>