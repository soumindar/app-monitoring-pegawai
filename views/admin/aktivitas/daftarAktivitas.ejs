<%- include('../partials/topTemplate') %>

<!-- Begin Page Content -->
<div class="container-fluid">
    <% if (req.session.alert) { %>
        <% req.session.alert.forEach(alert => { %>
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                <%= alert.msg %>
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
                </button>
            </div>
        <% }) %>
    <% } %>

    <% if (req.session.error) { %>
        <% req.session.error.forEach(error => { %>
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                <%= error.msg %>
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
                </button>
            </div>
        <% }) %>
    <% } %>

    <% delete req.session.alert; %>
    <% delete req.session.error; %>

    <!-- Content Row -->
    <div class="row">
        <div class="container-fluid">
            <h1 class="h1 mb-3 text-gray-800">
                Daftar Aktivitas aktivitas
            </h1>
            <div class="card">
                <div class="card-body">
                    <a href="<%= baseUrl %>/admin/aktivitas/pegawai" class="btn btn-primary btn-sm mb-3"><i class="fa fa-arrow-left"></i><strong> Kembali</strong></a>
                    <div class="table-responsive">
                        <table class="table table-bordered">
                            <thead>
                                <tr>
                                    <th width="2%">No.</th>
                                    <th>Pekerjaan</th>
                                    <th width="15%">Tanggal Mulai</th>
                                    <th width="15%">Tanggal Selesai</th>
                                    <th width="10%">Isi Realisasi</th>
                                    <th width="10%">Aksi</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% let i = 1 %>
                                <% data.forEach(aktivitas => { %>
                                    <tr>
                                        <td><%= i++ %></td>
                                        <td><%= aktivitas.pekerjaan.pekerjaan %></td>
                                        <td><%= aktivitas.tglMulai %></td>
                                        <td><%= aktivitas.tglSelesai %></td>
                                        <td>
                                            <a href="<%= baseUrl %>/admin/aktivitas/pegawai/realisasi/<%= aktivitas.id %>" data-toggle="tooltip" data-placement="top" title="Isi Realisasi" class="btn btn-primary btn-sm"><i class="fa fa-arrow-right"></i></a>
                                        </td>
                                        <td>
                                            <a href="" data-toggle="tooltip" data-placement="top" title="Ubah Aktivitas" class="btn btn-success btn-sm"><i class="fa fa-edit"></i></a>
                                            <a href="" data-toggle="tooltip" data-placement="top" title="Ubah Aktivitas" class="btn btn-danger btn-sm delete-confirm"><i class="fa fa-trash"></i></a>
                                        </td>
                                    </tr>
                                <% }) %>
                            </tbody>
                        </table>
                    </div>

                    <div>
                        <% if (totalPage > 0) { %>
                            <ul class="pagination justify-content-center">
                                <% if (currentPage == 1) { %>
                                    <li class="page-item disabled">
                                        <a class="page-link">First</a>
                                    </li>
                                <% } else {%>
                                    <li class="page-item">
                                        <a class="page-link" href="<%= baseUrl %>/admin/aktivitas/pegawai/<%= req.params.idPegawai %>?page=1">First</a>
                                    </li>
                                <% } %>
                                <% let i = (currentPage > 5) ? currentPage - 4 : 1 %>
                                <% if (i != 1) { %>
                                    <li class="page-item disabled">
                                        <a class="page-link">...</a>
                                    </li>
                                <% } %>
                                <% for (; (i <= currentPage + 4) && (i <= totalPage); i++) { %>
                                    <% if (i == currentPage) { %>
                                        <li class="page-item active">
                                            <a class="page-link"><%= i %></a>
                                        </li>
                                    <% } else { %>
                                        <li class="page-item">
                                            <a class="page-link" href="<%= baseUrl %>/admin/aktivitas/pegawai/<%= req.params.idPegawai %>?page=<%= i%>"><%= i %></a>
                                        </li>
                                    <% } %>
                                    <% if ((i == currentPage + 4) && (i < totalPage)) { %>
                                        <li class="page-item disabled">
                                            <a class="page-link">...</a>
                                        </li>
                                    <% } %>
                                <% } %>
                                <% if (currentPage == totalPage) { %>
                                    <li class="page-item disabled">
                                        <a class="page-link">Last</a>
                                    </li>
                                <% } else { %>
                                    <li class="page-item">
                                        <a class="page-link" href="<%= baseUrl %>/admin/aktivitas/pegawai/<%= req.params.idPegawai %>?page=<%= totalPage %>">Last</a>
                                    </li>
                                <% } %>
                            </ul>
                        <% } %>
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>
<!-- /.container-fluid -->

<%- include('../partials/bottomTemplate') %>