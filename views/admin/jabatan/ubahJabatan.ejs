<%- include('../partials/topTemplate') %>

<!-- Begin Page Content -->
<div class="container-fluid">

  <!-- Page Heading -->
  <div class="d-sm-flex align-items-center justify-content-between mb-4">
      <h1 class="h1 mb-0 text-gray-800">Ubah Data Jabatan</h1>
  </div>

  <% if (req.session.error) { %>
    <% req.session.error.forEach(error => { %>
      <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <%= error.msg %>
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
    <% }) %>
  <% } %>

  <% delete req.session.error; %>
  
  <!-- Content Row -->
  <div class="row">
    <div class="container-fluid">
      <div class="card">
        <div class="card-body">
          <div class="row">
            <div class="col-lg-6">
              <form method="post" action="<%= baseUrl %>/admin/jabatan/ubah/<%= req.params.id %>">
                <div class="form-group mb-4">
                  <label class="text-dark">Jabatan</label>
                  <input required type="text" name="jabatan" class="form-control" value="<%= (req.session.oldJabatan) ? req.session.oldJabatan.jabatan : jabatan.jabatan %>">
                </div>
                <div class="form-group mb-4">
                  <label class="text-dark">Keterangan</label>
                  <div>Isi dengan '-' apabila tidak ada keterangan</div>
                  <input required type="text" name="keterangan" class="form-control" value="<%= (req.session.oldJabatan) ? req.session.oldJabatan.keterangan : jabatan.keterangan %>">
                </div>
                <br>
                <a href="<%= baseUrl %>/admin/jabatan/daftar" class="btn btn-danger">Batal</a>
                <button type="submit" class="btn btn-primary">Simpan</button>
              </form>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

</div>
<!-- /.container-fluid -->

<%- include('../partials/bottomTemplate') %>