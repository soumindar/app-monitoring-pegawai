<%- include('../partials/topTemplate') %>

<!-- Begin Page Content -->
<div class="container-fluid">

  <!-- Page Heading -->
  <div class="d-sm-flex align-items-center justify-content-between mb-4">
      <h1 class="h1 mb-0 text-gray-800">Tambah/Perbarui Capaian Kinerja Pegawai Keseluruhan</h1>
  </div>

  <% if (req.session.error) { %>
    <% req.session.error.forEach(error => { %>
      <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <%= error.msg %>
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
    <% }) %>
  <% } %>

  <% delete req.session.error; %>
  
  <!-- Content Row -->
  <div class="row">
    <div class="container-fluid">
      <div class="card">
        <div class="card-body">
          <div class="row">
            <div class="col-lg-6">
              <form method="post" action="<%= baseUrl %>/admin/ckp-divisi/tambah">
                <div class="form-group mb-4">
                  <label class="text-gray-800">Pilih Divisi:</label>
                  <select class="js-example-basic-single form-control" name="idDivisi">
                      <option selected>Pilih Divisi...</option>
                    <% divisi.forEach(divisi => { %>
                      <% if (req.query.idDivisi == divisi.id) { %>
                        <option selected value="<%= divisi.id %>"><%= divisi.divisi %></option>
                      <% } else { %>
                        <option value="<%= divisi.id %>"><%= divisi.divisi %></option>
                      <% } %>
                    <% }) %>
                  </select>
                </div>
                <div class="form-group mb-4">
                  <label class="text-gray-800">Tahun:</label>
                  <input required type="number" name="tahun" class="form-control">
                </div>
                <br>
                <a href="<%= baseUrl %>/admin/ckp-divisi/daftar" class="btn btn-danger">Batal</a>
                <button type="submit" class="btn btn-primary">Tambah/Perbarui CKP</button>
              </form>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

</div>
<!-- /.container-fluid -->

<%- include('../partials/bottomTemplate') %>