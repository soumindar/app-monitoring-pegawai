<!-- pilih tampilan -->
<script>
    const tampilan = $("#form-tampilan input[name='tampilanKsl']:checked").val();
    if (tampilan == 'bulanan') {
        $('.tahun-akhir').hide();
        $('#tahun-awal').html('Pilih tahun:');
        $('#input-tahun-akhir').prop('required', false);
        $('#input-tahun-akhir').prop('name', '');
    }

    $("#form-tampilan input[name='tampilanKsl']").on('change', function() {
        if (this.value == 'bulanan') {
            $('.tahun-akhir').hide();
            $('#tahun-awal').html('Pilih tahun:');
            $('#input-tahun-akhir').prop('required', false);
            $('#input-tahun-akhir').prop('name', '');
        } else {
            $('.tahun-akhir').show();
            $('#tahun-awal').html('Dari tahun:');
            $('#input-tahun-akhir').prop('required', true);
            $('#input-tahun-akhir').prop('name', 'tahunAkhirKsl');
        }
    });
</script>

