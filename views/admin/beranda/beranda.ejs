        <div class="col-lg-6">
            <div class="card h-100">
                <div class="card-body" >
                    <canvas id="ckp-divisi" style="height: 20rem;"></canvas>
                </div>
            </div>
        </div>
    </div>

    <div class="row mb-4">
        <!-- Pegawai Terbaik -->
        <div class="col-lg-6">
            <div class="card">
                <div class="card-body">
                    pegawai terbaik
                </div>
            </div>
        </div>
    </div>

</div>
