                                                    <input required id="input-tahun-akhir" type="number" name="tahunAkhirKsl" class="form-control form-control-sm">
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-lg-4"></div>
                                    <div class="col-lg-8">
                                        <button type="submit" class="btn btn-primary btn-sm pull-right">Tampilkan</button>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>

                    <!-- Grafik -->
                    <div>
                        <canvas id="ckp-keseluruhan" style="height: 25rem;"></canvas>
                    </div>

                </div>
            </div>
        </div>
    </div>

    <div class="row mb-4">
        <!-- Grafik Distribusi Pegawai -->
        <div class="col-lg-6">
            <div class="card">
                <div class="card-body">
                    <canvas id="distribusi-pegawai" style="height: 20rem;"></canvas>
                </div>
