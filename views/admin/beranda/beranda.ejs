<%- include('../partials/topTemplate') %>

<!-- Begin Page Content -->
<div class="container-fluid">

    <% if (req.session.alert) { %>
        <% req.session.alert.forEach(alert => { %>
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                <%= alert.msg %>
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
                </button>
            </div>
        <% }) %>
    <% } %>

    <% if (req.session.error) { %>
        <% req.session.error.forEach(error => { %>
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                <%= error.msg %>
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
                </button>
            </div>
        <% }) %>
    <% } %>

    <% delete req.session.alert; %>
    <% delete req.session.error; %>

    <!-- Page Heading -->
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">Dashboard Admin</h1>
    </div>

    <!-- Content Row -->
    <div class="row">

        <!-- Pegawai -->
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-primary shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">
                                Jumlah Pegawai</div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800"><%= jmlPegawai %></div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-user fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Aktivitas -->
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-success shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-success text-uppercase mb-1">
                                Jumlah Aktivitas Tahun Ini</div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800"><%= jmlAktivitas %></div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-calendar fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Progress CKP -->
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-info shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-info text-uppercase mb-1">Progress CKP Tahun Ini
                            </div>
                            <div class="row no-gutters align-items-center">
                                <% if (progressCkp) { %>
                                    <div class="col-auto">
                                        <div class="h5 mb-0 mr-3 font-weight-bold text-gray-800"><%= progressCkp %>%</div>
                                    </div>
                                    <div class="col">
                                        <div class="progress progress-sm mr-2">
                                            <div class="progress-bar bg-info" role="progressbar"
                                                style="width: <%= progressCkp %>%" aria-valuenow="<%= progressCkp %>" aria-valuemin="0"
                                                aria-valuemax="100"></div>
                                        </div>
                                    </div>
                                <% } else { %>
                                    <div class="col-auto">
                                        <div class="h6  mb-0 mr-3 font-weight-bold text-gray-800">Belum ada data</div>
                                    </div>
                                <% } %>
                            </div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-tasks fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Realisasi Belum Lengkap -->
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-warning shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-warning text-uppercase mb-1">
                                Realisasi Kosong Tahun Ini</div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800"><%= realisasiKosong %></div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-exclamation-circle fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Grafik CKP Keseluruhan -->
    <div class="row mb-4">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-body">
                    <iframe src="<%= baseUrl %>/admin/grafik-ckp-keseluruhan" class="embed-responsive-item" style="width: 100%;height: 75vh;position: relative;" frameborder="0"></iframe>
                </div>
            </div>
        </div>
    </div>

    <div class="row mb-4">
        <!-- Grafik Distribusi Pegawai -->
        <div class="col-lg-6">
            <div class="card h-100">
                <div class="card-body">
                    <canvas id="distribusi-pegawai" style="height: 20rem;"></canvas>
                </div>
                <div class="h5 mb-3 text-gray-900 text-center">
                    Total pegawai: <%= jmlPegawai %>
                </div>
            </div>
        </div>

        <!-- Grafik CKP Per Divisi -->
        <div class="col-lg-6">
            <div class="card">
                <div class="card-body">
                    <iframe src="<%= baseUrl %>/admin/grafik-ckp-per-divisi" class="embed-responsive-item" style="width: 100%;height: 55vh;position: relative;" frameborder="0"></iframe>
                </div>
            </div>
        </div>   
    </div>

    <!-- Grafik CKP Divisi -->
    <div class="row mb-4">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-body">
                    <iframe src="<%= baseUrl %>/admin/grafik-ckp-divisi" class="embed-responsive-item" style="width: 100%;height: 75vh;position: relative;" frameborder="0"></iframe>
                </div>
            </div>
        </div>
    </div>
    
    <div class="row mb-4">
        <!-- Pegawai Terbaik -->
        <div class="col-lg-6">
            <div class="card border-left-info h-100">
                <div class="card-body">
                    <iframe src="<%= baseUrl %>/admin/pegawai-terbaik" class="embed-responsive-item" style="width: 100%;height: 70vh;position: relative;" frameborder="0"></iframe>
                </div>
            </div>
        </div>

        <!-- Pegawai dengan Realisasi Kosong -->
        <div class="col-lg-6">
            <div class="card border-left-warning h-100">
                <div class="card-body">
                    <iframe src="<%= baseUrl %>/admin/pegawai-realisasi-kosong" class="embed-responsive-item" style="width: 100%;height: 70vh;position: relative;" frameborder="0"></iframe>
                </div>
            </div>
        </div>   
    </div>

</div>
<!-- /.container-fluid -->


<script src="<%= baseUrl %>/vendor/jquery/jquery.min.js"></script>

<script src="<%= baseUrl %>/vendor/chart.js/Chart.min.js"></script>

<!-- chartjs -->
<script>

    const getDistribusiPegawai = "<%= distribusiPegawai %>";
    const distribusiPegawai = getDistribusiPegawai.replace(/&#34;/g, '"');
    const cData = JSON.parse(distribusiPegawai);

    const ctx = $('#distribusi-pegawai');
    
    const data = {
        labels: cData.label,
        datasets: [{
            label: "Distribusi Pegawai Per Divisi",
            data: cData.data,
            backgroundColor: ['#2364AA', '#3DA5D9','#73BFB8','#F0E3B4','#FEC601', '#EA7317'],
            borderColor: '#ccc',
            borderWidth: [0, 0, 0, 0, 0, 0]
        }],
    };

    const options = {
        responsive: true,
        maintainAspectRatio: false,
        title: {
            display: true,
            position: "top",
            text: "Distribusi Pegawai Per Divisi",
            fontSize: 18,
            fontColor: "#4C4C4C"
        },
        legend: {
            display: true,
            labels: {
                boxWidth: 20,
            }
        },
        layout: {
            padding: {
                left: 10,
                right: 10,
                top: 0,
                bottom: 0
            }
        },
        tooltips: {
            titleMarginBottom: 10,
            titleFontColor: '#6e707e',
            titleFontSize: 14,
            backgroundColor: "rgb(255,255,255)",
            bodyFontColor: "#858796",
            borderColor: '#dddfeb',
            borderWidth: 1,
            xPadding: 15,
            yPadding: 15,
            displayColors: false,
            caretPadding: 10,
        },
    };

    const chart = new Chart(ctx, {
        type: "pie",
        data: data,
        options: options,
    });
</script>

<%- include('../partials/bottomTemplate') %>