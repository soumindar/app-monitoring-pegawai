<%- include('./partials/topTemplate') %>

<!-- Begin Page Content -->
<div class="container-fluid">

  <!-- Page Heading -->
  <div class="d-sm-flex align-items-center justify-content-between mb-4">
      <h1 class="h3 mb-0 text-gray-800">Ubah Data Admin</h1>
  </div>

  <% if (req.session.alert) { %>
    <% req.session.alert.forEach(alert => { %>
      <div class="alert alert-success alert-dismissible fade show" role="alert">
        <%= alert.msg %>
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
    <% }) %>
  <% } %>

  <% if (req.session.error) { %>
    <% req.session.error.forEach(error => { %>
      <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <%= error.msg %>
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
    <% }) %>
  <% } %>

  <% delete req.session.alert; %>
  <% delete req.session.error; %>
  
  <!-- Content Row -->
  <div class="row">
    <div class="container-fluid">
      <div class="card">
        <div class="card-body">
          <div class="row">
            <div class="col-lg-6">
              <form method="post" action="<%= baseUrl %>/admin/edit/<%= req.params.id %>">
                <div class="form-group mb-4">
                  <label for="nama" class="text-dark">Nama</label>
                  <input type="text" name="nama" class="form-control" value="<%= data.nama %>">
                </div>
                <div class="form-group mb-4">
                  <label for="username" class="text-dark">Username</label>
                  <input type="text" name="username" class="form-control" value="<%= data.username %>">
                </div>
                <button type="submit" class="btn btn-primary">Simpan</button>
              </form>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

</div>
<!-- /.container-fluid -->

<%- include('./partials/bottomTemplate') %>