<%- include('../partials/topTemplate') %>

<!-- Begin Page Content -->
<div class="container-fluid">

    <% if (req.session.alert) { %>
        <% req.session.alert.forEach(alert => { %>
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                <%= alert.msg %>
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
                </button>
            </div>
        <% }) %>
    <% } %>

    <% if (req.session.error) { %>
        <% req.session.error.forEach(error => { %>
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                <%= error.msg %>
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
                </button>
            </div>
        <% }) %>
    <% } %>

    <% delete req.session.alert; %>
    <% delete req.session.error; %>

    <!-- Page Heading -->
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <div class="h1 mb-0 text-gray-800">Detail Pegawai</div>
    </div>

    <!-- Content Row -->
    <div class="row">

        <!-- Earnings (Monthly) Card Example -->
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-primary shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">
                                Aktivitas Bulan Ini</div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800"><%= aktivitasBulanIni %></div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-calendar fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Earnings (Monthly) Card Example -->
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-success shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-success text-uppercase mb-1">
                                Aktivitas Tahun ini</div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800"><%= aktivitasTahunIni %></div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-calendar fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Earnings (Monthly) Card Example -->
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-info shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-info text-uppercase mb-1">Progress CKP Tahun Ini
                            </div>
                            <div class="row no-gutters align-items-center">
                                <% if (progressCkp) { %>
                                    <div class="col-auto">
                                        <div class="h5 mb-0 mr-3 font-weight-bold text-gray-800"><%= progressCkp %>%</div>
                                    </div>
                                    <div class="col">
                                        <div class="progress progress-sm mr-2">
                                            <div class="progress-bar bg-info" role="progressbar"
                                                style="width: <%= progressCkp %>%" aria-valuenow="<%= progressCkp %>" aria-valuemin="0"
                                                aria-valuemax="100"></div>
                                        </div>
                                    </div>
                                <% } else { %>
                                    <div class="col-auto">
                                        <div class="h6  mb-0 mr-3 font-weight-bold text-gray-800">Belum ada data</div>
                                    </div>
                                <% } %>
                            </div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-tasks fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Pending Requests Card Example -->
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-warning shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-warning text-uppercase mb-1">
                                Realisasi Kosong Tahun Ini</div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800"><%= realisasiKosong %></div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-exclamation-circle fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Content Row -->
    <div class="row mb-4">
        <div class="col-lg-6">
            <div class="card">
                <div class="card-body">
                    <div class="h3 mb-4 text-gray-800">
                        Data Pegawai
                    </div>
                    <div class="row">
                        <div class="ml-2">
                            <img class="img-thumbnail img-fluid " src="<%= pegawai.foto %>" width="200px">
                        </div>
                        <div class="col-lg-6">
                            <table>
                                <tr>
                                    <th class="text-gray-800">NIP</th>
                                    <td class="text-gray-800 text-center" width="5%">:</td>
                                    <td class="text-gray-800"><%= pegawai.nip %></td>
                                </tr>
                                <tr>
                                    <th class="text-gray-800">Nama</th>
                                    <td class="text-gray-800 text-center" width="5%">:</td>
                                    <td class="text-gray-800"><%= pegawai.nama %></td>
                                </tr>
                                <tr>
                                    <th class="text-gray-800">Tanggal lahir</th>
                                    <td class="text-gray-800 text-center" width="5%">:</td>
                                    <td class="text-gray-800"><%= pegawai.tglLahir %></td>
                                </tr>
                                <tr>
                                    <th class="text-gray-800">Jabatan</th>
                                    <td class="text-gray-800 text-center" width="5%">:</td>
                                    <td class="text-gray-800"><%= pegawai.jabatan.jabatan %></td>
                                </tr>
                                <tr>
                                    <th class="text-gray-800">Divisi</th>
                                    <td class="text-gray-800 text-center" width="5%">:</td>
                                    <td class="text-gray-800"><%= pegawai.divisi.divisi %></td>
                                </tr>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-lg-6">
            <div class="card h-100">
                <div class="card-body">
                    <div class="row">
                        <div class="col-lg-12">
                            <div class="h3 mb-4 text-gray-800 text-center">
                                Capaian Kinerja Pegawai Tahun <%= tahunLalu %>
                            </div>
                        </div>
                    </div>
                    <div class="row mt-3">
                        <div class="col-lg-12">
                            <div class="mx-auto">
                                <h1 class="text-center text-success font-weight-bold" style="font-size: 100px;"><%= ckpTahunLalu %>%</h1>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Grafik CKP -->
    <div class="row mb-4">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-body">
                    <iframe src="<%= baseUrl %>/admin/pegawai/grafik-ckp/<%= req.params.idPegawai %>" class="embed-responsive-item" style="width: 100%;height: 80vh;position: relative;" frameborder="0"></iframe>
                </div>
            </div>
        </div>
    </div>

    <!-- Tabel Realisasi Kosong -->
    <div class="row mb-4">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-body">
                    <iframe src="<%= baseUrl %>/admin/pegawai/realisasi-kosong/<%= req.params.idPegawai %>" class="embed-responsive-item" style="width: 100%;height: 57vh;position: relative;" frameborder="0"></iframe>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- /.container-fluid -->

<%- include('../partials/bottomTemplate') %>