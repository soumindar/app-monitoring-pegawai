<%- include('../partials/topTemplate') %>

<!-- Begin Page Content -->
<div class="container-fluid">

  <!-- Page Heading -->
  <div class="d-sm-flex align-items-center justify-content-between mb-4">
      <h1 class="h3 mb-0 text-gray-800">Ubah Data Pegawai</h1>
  </div>

  <% if (req.session.alert) { %>
    <% req.session.alert.forEach(alert => { %>
      <div class="alert alert-success alert-dismissible fade show" role="alert">
        <%= alert.msg %>
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
    <% }) %>
  <% } %>

  <% if (req.session.error) { %>
    <% req.session.error.forEach(error => { %>
      <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <%= error.msg %>
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
    <% }) %>
  <% } %>

  <% delete req.session.alert; %>
  <% delete req.session.error; %>
  
  <!-- Content Row -->
  <div class="row">
    <div class="container-fluid">
      <div class="card">
        <div class="card-body">
          <div class="row">
            <div class="col-lg-6">
              <form method="post" action="<%= baseUrl %>/admin/pegawai/ubah/<%= req.params.id %>" enctype="multipart/form-data">
                <div class="form-group mb-4">
                  <label class="text-dark">NIP</label>
                  <input type="text" name="nip" class="form-control" value="<%= (req.session.oldPegawai) ? req.session.oldPegawai.nip : pegawai.nip %>">
                </div>
                <div class="form-group mb-4">
                  <label class="text-dark">Nama</label>
                  <input type="text" name="nama" class="form-control" value="<%= (req.session.oldPegawai) ? req.session.oldPegawai.nama : pegawai.nama %>">
                </div>
                <div class="form-group mb-4">
                  <label class="text-dark">Tanggal Lahir</label>
                  <input type="date" name="tglLahir" class="form-control" value="<%= (req.session.oldPegawai) ? req.session.oldPegawai.tglLahir : pegawai.tglLahir %>">
                </div>
                <div class="form-group mb-4">
                  <label class="text-dark">Jabatan</label>
                  <br>
                  <select class="js-example-basic-single form-control" name="idJabatan">
                    <% jabatan.forEach(jabatan => { %>
                      <% if (req.session.oldPegawai) { %>
                        <% if (req.session.oldPegawai.idJabatan == jabatan.id) { %>
                          <option selected value="<%= jabatan.id %>"><%= jabatan.jabatan %></option>
                        <% } else { %>
                          <option value="<%= jabatan.id %>"><%= jabatan.jabatan %></option>
                        <% } %>
                      <% } else { %>
                        <% if (pegawai.idJabatan == jabatan.id) { %>
                          <option selected value="<%= jabatan.id %>"><%= jabatan.jabatan %></option>
                        <% } else { %>
                          <option value="<%= jabatan.id %>"><%= jabatan.jabatan %></option>
                        <% } %>
                      <% } %>
                    <% }) %>
                  </select>
                </div>
                <div class="form-group mb-4">
                  <label class="text-dark">Divisi</label>
                  <br>
                  <select class="js-example-basic-single form-control" name="idDivisi">
                    <% if (!req.session.oldPegawai) { %>
                      <option selected>Pilih Divisi...</option>
                    <% } %>
                    <% divisi.forEach(divisi => { %>
                      <% if (req.session.oldPegawai) { %>
                        <% if (req.session.oldPegawai.idDivisi == divisi.id) { %>
                          <option selected value="<%= divisi.id %>"><%= divisi.divisi %></option>
                        <% } else { %>
                          <option value="<%= divisi.id %>"><%= divisi.divisi %></option>
                        <% } %>
                      <% } else { %>
                        <% if (pegawai.idDivisi == divisi.id) { %>
                          <option selected value="<%= divisi.id %>"><%= divisi.divisi %></option>
                        <% } else { %>
                          <option value="<%= divisi.id %>"><%= divisi.divisi %></option>
                        <% } %>
                      <% } %>
                    <% }) %>
                  </select>
                </div>
                <div class="form-group mb-4">
                  <label class="text-dark">Username</label>
                  <input type="text" name="username" class="form-control" value="<%= (req.session.oldPegawai) ? req.session.oldPegawai.username : pegawai.username %>">
                </div>
                <br>
                <a href="<%= baseUrl %>/admin/pegawai/daftar" class="btn btn-danger">Batal</a>
                <button type="submit" class="btn btn-primary">Simpan</button>
              </form>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

</div>
<!-- /.container-fluid -->

<%- include('../partials/bottomTemplate') %>